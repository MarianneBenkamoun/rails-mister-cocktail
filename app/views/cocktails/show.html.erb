
<div class="container">
<div class="container">
 <div class="col-xs-6 col-md-offset-3">
  <div class="cardbig">
    <div><h2> <%= @cocktail.name %> </h2></div>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <div class="flex">
      <%= link_to"Delete", cocktail_path(@cocktail), class: "btn-special",
      method: :delete,
      data: { confirm: "Are you sure?" }  %>
      <%= link_to "back", cocktails_path, class:"btn-special " %>
    </div>
  </div>

  <% @cocktail.doses.each do |dose| %>
  <div class="flex">
    <p><%= dose.description %> de <%=dose.ingredient.name%> </p>
    <%= link_to "Delete", dose_path(dose), class: "btn-special", method: :delete, data: { confirm: "Are you sure?" }%>
  </div>
  <% end %>
</div>
</div>

<div class= "container">
<%= simple_form_for [@cocktail, @dose] do |f| %>
<%= f.input :description %>
<%= f.input :ingredient_id, collection: @ingredients, :prompt => 'Select One' %>
<%= f.submit "add a dose", class: "btn btn-primary" %>
<% end %>
</div>

</div>

